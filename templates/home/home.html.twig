{% extends "base.html.twig" %}
{% block title %}
    Accueil 
{% endblock %}

{% block body %}
        <h3 class="text-center"> Bienvenue sur le blog des Développeurs </h3>
<div class="row">
        <div class="col-md-8 ">
        <div class="row m-2 ">
            {% for article in articles %}
            <div class=' card col-md-4 mb-1'>
            <img href="/assets/images/article/{{article.image}}" class='img-fluid' alt="{{ article.title }}">
            <div class="card-body">
            <p class="text-center"> {{article.title}} </p>
            <a href="{{ path('article', {'id':article.id })}}" class='btn btn-success'> En savoir plus </a>
            </div>
            <div class="card-footer">
            <p class='mt-2 text-bold'> Écrit par {{ article.auteur }}  </p>
            </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="col-md-4">
      <div class="row m-2 ">
    <ul clas='list-group'>
    <li class='list-group-item text-center display-6'> Nos catégories  </li>
        {% for category in categories %}
            <li class='list-group-item d-flex justify-content-between'> <a href="{{path('category', {'id': category.id} )}}" class="flex-1" > {{ category.name }} </a>  <span class ="badge badge-light flex-1 "> {{category.articles | length }} article(s) </span>
            </li>
        {% endfor %}
    </ul>
    </div>
    </div>
   </div>
{% endblock %}
